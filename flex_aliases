#Vagrant
alias v="vagrant"
alias vgs="vagrant global-status"
alias vup="v up"
alias vdown="v halt"
alias vssh="vagrant ssh"
alias vroot="vagrant ssh -c 'sudo -i'"

#Jetty
alias jstart="flex5 && vagrant ssh -c 'sudo service jetty-rogerdev start'"
alias jstop="flex5 && vagrant ssh -c 'sudo service jetty-rogerdev stop'"

#Git
alias gtidy="git fetch -p && git branch -vv | grep ': gone]' | awk '{print \$1}' | xargs git branch -D && echo Git cleanup finished."

#Misc
alias ll='ls -alhG'

#SSH config compile
alias cssh='echo -n > ~/.ssh/config && cat ~/.ssh/*.config > ~/.ssh/config'

#Project shortcuts
alias flex="cd ~/projects/flex"
alias flex4="cd ~/projects/flex/flex4"
alias flex5="cd ~/projects/flex/flex5"
alias flexv="flex5 && vroot"
alias fbl="cd ~/projects/flex/flex-base/logs"
alias ansible="cd ~/projects/flex/ansible"

