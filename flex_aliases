#Project shortcuts
alias flex="cd ~/projects/flex"
alias fpm="cd ~/projects/flex/flex-production-manager"
alias fbl="cd ~/projects/flex/flex-base/logs"
alias ansible="cd ~/projects/flex/ansible"

#Vagrant
alias v="vagrant"
alias vgs="vagrant global-status"
alias vup="v up"
alias vdown="v halt"
alias vssh="vagrant ssh"
alias vroot="vagrant ssh -c 'sudo -i'"

#Jetty
alias jstart="fpm && vagrant ssh -c 'sudo service jetty-rogerdev start'"
alias jstop="fpm && vagrant ssh -c 'sudo service jetty-rogerdev stop'"

#Misc
alias ll='ls -alhG'

#SSH config compile
alias cssh='echo -n > ~/.ssh/config && cat ~/.ssh/*.config > ~/.ssh/config'
